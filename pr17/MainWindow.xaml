<Window x:Class="pz17.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz17"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <InkCanvas EditingMode="Ink" x:Name="ink" Margin="0,0,0,20"></InkCanvas>
        <ProgressBar Name="progressBar" Height="20" VerticalAlignment="Bottom" Minimum="0" Maximum="100"></ProgressBar>
        <Button Width="70" Height="20" Content="start" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click"></Button>
    </Grid>
</Window>
